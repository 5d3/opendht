FROM ubuntu:16.04
MAINTAINER Adrien BÃ©raud <adrien.beraud@savoirfairelinux.com>
RUN apt-get update && apt-get install -y build-essential cmake git wget libncurses5-dev libreadline-dev nettle-dev libgnutls-dev cython3 python3-dev python3-setuptools python3-pip python3-numpy python3-matplotlib python3-netifaces && apt-get clean
RUN pip3 install pyroute2
RUN wget https://github.com/msgpack/msgpack-c/releases/download/cpp-2.0.0/msgpack-2.0.0.tar.gz \
	&& tar -xzf msgpack-2.0.0.tar.gz \
	&& cd msgpack-2.0.0 && mkdir build && cd build \
	&& cmake -DMSGPACK_CXX11=ON -DMSGPACK_BUILD_EXAMPLES=OFF -DCMAKE_INSTALL_PREFIX=/usr .. \
	&& make -j8 && make install \
	&& cd ../.. && rm -rf msgpack-2.0.0 msgpack-2.0.0.tar.gz
